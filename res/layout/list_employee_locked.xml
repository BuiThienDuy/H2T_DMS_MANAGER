<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:background="@drawable/rowselector"
              android:padding="3dp"
        >

    <com.parse.ParseImageView
            android:id="@+id/list_employee_locked_iv_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#CCCCCC"
            />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <TextView
                android:id="@+id/list_employee_locked_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:textSize="24sp"
                android:textColor="@color/bbutton_primary"
                android:text="@string/notFoundError"/>
        <TextView
                android:id="@+id/list_employee_locked_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="@string/notFoundError"
                android:layout_gravity="bottom"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            >
        <com.parse.ParseImageView
                android:id="@+id/list_employee_locked_iv_locked"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                />
    </LinearLayout>

</LinearLayout>